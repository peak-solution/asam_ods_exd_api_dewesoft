{
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "files.trimTrailingWhitespace": true,
  "files.autoSave": "onFocusChange",
  "flake8.args": [
    "--max-line-length=119"
  ],
  "black-formatter.args": [
    "--line-length=119"
  ],
  "pylint.args": [
    "--max-line-length=119"
  ],
  "python.testing.unittestArgs": [
    "-v",
    "-s",
    "./test",
    "-p",
    "test_*.py"
  ],
  "python.testing.unittestEnabled": true
}